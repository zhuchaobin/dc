  	<select id="queryTaskId" parameterType="com.xai.tt.dc.client.query.WfeQuery" resultType="java.lang.String">
select t2.ID_ from 
t1_ar_inf t1,
act_ru_task t2
where t1.AR_ID = #{arId,jdbcType=VARCHAR}
and t1.PROCESS_INST_ID = t2.PROC_INST_ID_
