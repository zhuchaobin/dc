        and TASK_DEF_KEY_  = #{sndinsAdtTm ,jdbcType=VARCHAR}
      </if>  
	</select>
	
  	<select id="queryOrderTaskId" parameterType="com.xai.tt.dc.client.query.WfeQuery" resultType="java.lang.String">
